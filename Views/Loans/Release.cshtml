@model Troja.Models.ReleaseViewModel

@{
    ViewData["Title"] = "Release Loan";
}

<h2>Release Loan</h2>

<form asp-action="Release">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="BookTitle" class="control-label"></label>
            <input type="text" class="form-control" value="@Model.BookTitle" readonly />
        </div>

        <div class="form-group">
            <label asp-for="StatusValue" class="control-label"></label>
            <select asp-for="StatusValue" class="form-control">
                <option value="1">Liberado</option>
                <option value="2">Devolución retrasada</option>
                <option value="3">Pendiente de devolución</option>
            </select>
        </div>

        <input type="hidden" asp-for="LoanId" />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>
