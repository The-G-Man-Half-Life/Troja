@model Troja.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this author?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.AuthorLastName</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="AuthorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Authors" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
